      </glossentry><glossentry>
        <glossterm><command>-fs</command></glossterm>
        <glossterm><command>--fullscreen</command></glossterm>
        <glossdef><para>Oyunu tam ekran kipinde başlatır.
        </para></glossdef>
      </glossentry><glossentry>
        <glossterm><command>-ns</command></glossterm>
        <glossterm><command>--nosound</command></glossterm>
        <glossdef><para>Müzik ve ses gösterilerini kapatır.
        </para></glossdef>
      </glossentry><glossentry>
        <glossterm><command>-nm</command></glossterm>
        <glossterm><command>--nomusic</command></glossterm>
        <glossdef><para>Sadece müziği kapatır, ses gösterileri açık kalır.
        </para></glossdef>
      </glossentry><glossentry>
        <glossterm><command>-nfx</command></glossterm>
        <glossterm><command>--nosfx</command></glossterm>
